<!DOCTYPE HTML>
<html lang="pl">
<head>
    <title>Prudenit</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="login.css">
</head>

<body>
    <p id="pageload_bar"></p>
    <div id="loading_anim">
        <p class="dot" style="left: 0px;"></p>
        <p class="dot" style="left: 20px;"></p>
        <p class="dot" style="left: 40px;"></p>
        <p class="dot" style="left: 60px;"></p>
    </div>
    <main>
        <div id="login_page" h="register">
            <h1>
                <%= locales.register %>
            </h1>
            <form action="/auth/register/" method="POST">
                <div id="content">
                    <input type="text" name="email" autocomplete="off" id="email" reqiured placeholder="E-mail"><br>
                    <input type="text" name="username" autocomplete="off" id="username" reqiured placeholder=<%=locales.username%>><br>
                    <input type="password" name="password" autocomplete="off" id="password" reqiured placeholder=<%=locales.password %>>
                    <input type="password" name="repassword" autocomplete="off" id="password-repeat" reqiured placeholder="<%= locales.repassword %>">
                </div>
                <% if (errors.length != 0) { %>
                    <% errors.forEach(err => { %>
                        <span class="error"><%= locales[err] %></span> <br />
                    <% }); %>
                <% } %>
                <div id="links">
                    <a href="#" onclick="loadPage('/login/')">
                        <%= locales.signin %>
                    </a>
                    |
                    <a href="#">
                        <%= locales.passwordreset %>
                    </a>
                </div>
                <input type="submit" id="login" onclick="login();" value="<%= locales.register %>"></input>
            </form>
            
        </div>
    </main>
    <script src="login.js"></script>
</body>

</html>